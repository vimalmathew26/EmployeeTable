$("#addForm").validate({
    rules: {
        // Update ZipCode validation to match server-side constraints
        ZipCode: {
            required: true,
            digits: true,
            minlength: 6,
            maxlength: 6
        },
        // Add specific validation for Department
        deptId: {
            required: true,
            min: 1
        },
        // Add date validation for DOB
        dob: {
            required: true,
            date: true,
            max: function() {
                return new Date().toISOString().split('T')[0];
            }
        }
    },
    messages: {
        // Add corresponding messages
        ZipCode: {
            required: "Please enter zip code",
            digits: "Please enter only digits",
            minlength: "Zip code must be 6 digits",
            maxlength: "Zip code must be 6 digits"
        },
        deptId: {
            required: "Please select a department",
            min: "Please select a valid department"
        },
        dob: {
            required: "Date of birth is required",
            date: "Please enter a valid date",
            max: "Date of birth cannot be in the future"
        }
    }
});