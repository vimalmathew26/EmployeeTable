@model EmployeeTable.Models.Admin
    @{ 
        Layout = null;

    }

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #000000, #0f2027, #203a43, #2c5364);
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
        }

        .login-box {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            margin: 100px auto;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2 class="text-center mb-4">Login</h2>
        <form method="post" action="/Admin/Login">
            @if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="alert alert-danger text-center" role="alert">
                    @ViewBag.Error
                </div>
            }
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" name="email" id="email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" class="form-control" name="password" id="password" required>
            </div>

            <div class="d-grid">
                <input type="submit" value="Login" class="btn btn-primary">
            </div>
            <input type="hidden" name="returnUrl" value="@Request.QueryString["ReturnUrl"]" />

        </form>
        <div class="text-center mt-3">
            <p>Don't have an account? <a href="/Admin/CreateAdmin" class="btn btn-link">Sign Up</a></p>
        </div>
        <div class="text-center mt-3">
            <p>Forget Password? <a href="/Admin/ChangePassword" class="btn btn-link">Change Password</a></p>
        </div>

    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
